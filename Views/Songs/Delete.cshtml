@model VentaMusical.Models.Entities.Song

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Desea eliminar la canción?</h3></div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SongId" readonly="readonly" />


                        <div class="row mb-3">
                            <div class="row mb-3">

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input required asp-for="SongName" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="SongName" class="text-danger"></span>
                                        <label for="UsuarioNombre">Canción</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input required asp-for="SongYear" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="SongYear" class="text-danger"></span>
                                        <label for="UsuarioNombre">Año canción</label>
                                    </div>
                                </div>
                            </div><br />
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input required asp-for="SongPrice" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="SongPrice" class="text-danger"></span>
                                        <label for="UsuarioNombre">Precio canción</label>
                                    </div>
                                </div>

                            </div><br />

                            <div class="mt-4 mb-0">
                                <div class="d-grid"><input type="submit" value="Eliminar Canción" class="btn btn-danger btn-block" /></div>
                            </div>
                            <div>
                                <a asp-action="Index">Regresar a la lista</a>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>