@model VentaMusical.Models.Entities.Song

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4">Editando canción</h3></div>
				<div class="card-body">
					<form asp-action="Edit">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" asp-for="SongId" />

						<div class="row mb-3">
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0">
									<input required asp-for="SongName" class="form-control" oninput="this.value = this.value.toUpperCase()" />
									<span asp-validation-for="SongName" class="text-danger"></span>
									<label for="UsuarioNombre">Nombre canción</label>
								</div>
							</div>
						</div>

						<div class="form-floating mb-3 mb-md-0">
							<select asp-for="AuthorId" asp-items="@ViewBag.Authors" class="form-control">
								<option value="">Seleccione un autor</option>
							</select>
							<label for="AuthorId">Nombre Autor</label>
						</div>

						<div class="form-floating mb-3 mb-md-0">
							<select asp-for="GenderId" asp-items="@ViewBag.Genders" class="form-control">
								<option value="">Seleccione un género</option>
							</select>
							<label for="GenderId">Género</label>
						</div>

						<div class="row mb-3">
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0">
									<input required asp-for="SongYear" class="form-control" oninput="this.value = this.value.toUpperCase()" />
									<span asp-validation-for="SongYear" class="text-danger"></span>
									<label for="UsuarioNombre">Año canción</label>
								</div>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0">
									<input required asp-for="SongPrice" class="form-control" oninput="this.value = this.value.toUpperCase()" />
									<span asp-validation-for="SongPrice" class="text-danger"></span>
									<label for="UsuarioNombre">Precio canción</label>
								</div>
							</div>
						</div>

						<div class="form-floating mb-3 mb-md-0">
							<select asp-for="AlbumeId" asp-items="@ViewBag.Albums" class="form-control">
								<option value="">Seleccione un álbum</option>
							</select>
							<label for="AlbumId">Nombre Álbum</label>
						</div>

						<div class="mt-4 mb-0">
							<div class="d-grid"><input type="submit" value="Guardar Cambios" class="btn btn-primary btn-block" /></div>
						</div>
						<div>
							<a asp-action="Index">Regresar a la lista</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
