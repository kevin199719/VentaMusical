@model VentaMusical.Models.Entities.Albume

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Desea eliminar el albume?</h3></div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AlbumeId" readonly="readonly" />


                        <div class="row mb-3">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input required asp-for="AlbumeName" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="AlbumeName" class="text-danger"></span>
                                        <label for="UsuarioNombre">Nombre del Albume</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input type="date" required asp-for="AlbumeYear" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="AlbumeYear" class="text-danger"></span>
                                        <label for="UsuarioNombre">Año de lanzamiento</label>
                                    </div>
                                </div>
                            </div><br />
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input required asp-for="Author.AuthorName" class="form-control" oninput="this.value = this.value.toUpperCase()" readonly="readonly" />
                                        <span asp-validation-for="Author.AuthorName" class="text-danger"></span>
                                        <label for="UsuarioNombre">Autor</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><input type="submit" value="Eliminar Albume" class="btn btn-danger btn-block" /></div>
                            </div>
                            <div>
                                <a asp-action="Index">Regresar a la lista</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>













