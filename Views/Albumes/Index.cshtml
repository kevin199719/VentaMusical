@model IEnumerable<VentaMusical.Models.Entities.Albume>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumeYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumeState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumeYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumeState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlbumeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AlbumeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AlbumeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
