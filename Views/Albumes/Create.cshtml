@model VentaMusical.Models.Entities.Albume

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Creando Album</h3></div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                <input required asp-for="AlbumeId" class="form-control" oninput="this.value = this.value.toUpperCase()" />
                                <span asp-validation-for="AlbumeId" class="text-danger"></span>
                                <label for="AlbumId"> ID</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                <input required asp-for="AlbumeName" class="form-control" oninput="this.value = this.value.toUpperCase()" />
                                <span asp-validation-for="AlbumeName" class="text-danger"></span>
                                <label for="AlbumeName"> Nombre del Album</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                <input required asp-for="AlbumeYear" class="form-control" oninput="this.value = this.value.toUpperCase()" />
                                <span asp-validation-for="AlbumeYear" class="text-danger"></span>
                                <label for="AlbumeYear"> Año del Album</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-check-input" asp-for="AlbumeState" /> @Html.DisplayNameFor(model => model.AlbumeState)
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><input type="submit" value="Crear Album" class="btn btn-primary btn-block" /></div>
                        </div>
                        <div>
                            <a asp-action="Index">Ir a la lista</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
